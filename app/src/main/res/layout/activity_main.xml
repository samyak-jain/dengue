<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.quizapp.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            android:padding="8dp">


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information" />

            <Button
                android:id="@+id/municp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inform Municpality"/>

            <include
                android:id="@+id/question_one"
                layout="@layout/question_one" />

            <include
                android:id="@+id/question_two"
                layout="@layout/question_two" />

            <include
                android:id="@+id/question_three"
                layout="@layout/question_three" />

            <include
                android:id="@+id/question_four"
                layout="@layout/question_four" />

            <include
                android:id="@+id/question_five"
                layout="@layout/question_five" />

            <include
                android:id="@+id/question_six"
                layout="@layout/question_six" />

            <Button
                android:id="@+id/submit"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>
</layout>